<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_tag users_path do %>
			
			<%= render 'shared/error_messages', object: @user %>
			<%= render 'shared/user_form' %>

			<%= submit_tag "Create my account", class: "btn btn-large btn-primary" %>
		<% end %> <!-- form_for -->
	</div> <!-- SPAN6 OFFSET3 -->
</div> <!-- ROW -->