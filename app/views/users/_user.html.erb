<li>
	<%= gravatar_for user, size: 52 %>
	<%= link_to user.name, user %>
	<% if current_user.admin? && !current_user?(user) %> <!-- if the current user is an admin, and we are not displaying that user, then offer the delete method --> 
	|	<%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" }%>
	<% end %>
</li>	